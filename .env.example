# Core app
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
SKIP_ENV_VALIDATION=false
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Clerk auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# OpenRouter / AI
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxxx
OPENROUTER_SITE_URL=http://localhost:3000
AI_TIER_1_MODEL=x-ai/grok-3-fast
AI_TIER_2_MODEL=anthropic/claude-sonnet-4
AI_TIER_3_MODEL=anthropic/claude-opus-4

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=+10000000000
TWILIO_PHONE_NUMBER=+10000000000
TWILIO_SKIP_SIGNATURE_VERIFICATION=false
TWILIO_WEBHOOK_URL=http://localhost:3000/api/webhooks/twilio
TWILIO_WEBHOOK_URL_STATUS=http://localhost:3000/api/webhooks/twilio/status

# Integrations
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback

# Security / crypto
ENCRYPTION_KEY=replace_with_64_hex_chars
CRON_SECRET=replace_with_strong_random_value

# Optional infrastructure
REDIS_URL=
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Billing / monitoring
STRIPE_SECRET_KEY=
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Runtime tuning / diagnostics
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10
LOG_DB_QUERIES=false
SLOW_QUERY_THRESHOLD=1000
DEBUG_AUTH=false

